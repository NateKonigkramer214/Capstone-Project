@model Contact
<link rel="stylesheet" href="~/your-css-file.css" />



@if (TempData["MessageSent"] != null)
{
    <div class="alert alert-success">
        Your message has been sent successfully. Thank you!
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="image-container">
                <img src="~/Images/getintouch.png" alt="Touch" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-container">
                @using (Html.BeginForm("Send", "Contact", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Name">Name</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>

                    <div class="form-group">
                        <label for="Message">Message</label>
                        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(m => m.Message)
                    </div>

                    <hr />
                    <button type="submit" class="btn btn-primary">Send</button>
                }
            </div>
        </div>
    </div>
</div>
