@{
	ViewData["Title"] = "Movies";
}

<h2 class="text-center text-2xl p-2 text-gray-200 shadow-2xl">Staff Picks</h2>
<div class="grid grid-flow-row grid-cols-1 md:grid-cols-2 lg:grid-cols-3 flex justify-evenly auto-rows-max">
    @foreach (var movie in ViewBag.movies)
    {
            <div class="border-none m-2 p-2 rounded flex items-center justify-evenly bg-gray-300">
                <div class="card mb-3" style="max-width: 250px;">
                    <div class="row g-0">
                        <div class="col-md-6">
                            <a href="@Url.Action("MovieDetails", "Home", new { id = movie.Id })">
                                <img src="@movie.Image" style="max-width: 250px;" />
                            </a>
                        </div>

                    </div>
                </div>
            </div>
    }
</div>



