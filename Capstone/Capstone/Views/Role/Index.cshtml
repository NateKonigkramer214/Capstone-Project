@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Role";
}

<h1 class="text-white">List of Roles</h1>
<a asp-action="Create"class="text-white">Create</a>
<br />
<a asp-action="ViewRoles"class="text-white">View Roles</a>
<table class="table table-striped table-bordered text-white">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>
</table>
