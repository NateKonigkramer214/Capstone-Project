@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="flex justify-center items-center min-h-screen">
    <div class="col-md-4">
        <h1 class="text-3xl font-bold text-center mb-8 text-gray-100">@ViewData["Title"]</h1>
        <h2 class="text-2xl font-bold text-center text-gray-300">Enter your email.</h2>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="All" class="text-white" role="alert"></div>
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Email" class="form-label text-gray-300">Email</label>
                        <input asp-for="Input.Email" class="form-control w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" aria-required="true" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-full px-4 py-2 text-lg font-medium text-white bg-gray-800 rounded-md hover:bg-gray-700 focus:outline-none focus:bg-gray-700">Resend</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
