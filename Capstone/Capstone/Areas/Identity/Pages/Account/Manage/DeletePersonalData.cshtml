@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<h3 class="text-2xl font-bold mb-4 text-gray-100">@ViewData["Title"]</h3>

<div class="flex justify-center items-center min-h-screen bg-gray-900">
    <div class="col-md-6">
        <div class="alert alert-warning" role="alert">
            <p class="text-gray-100">
                <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
            </p>
        </div>

        <div>
            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <label asp-for="Input.Password" class="form-label text-gray-100"></label>
                        <input asp-for="Input.Password" class="form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" autocomplete="current-password" aria-required="true" placeholder="Please enter your password." />
                        <span asp-validation-for="Input.Password" class="text-red-600"></span>
                    </div>
                }
                <button class="w-full px-4 py-2 mt-4 text-lg font-medium text-white bg-red-500 rounded-md hover:bg-red-400 focus:outline-none focus:bg-red-400" type="submit">Delete data and close my account</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
