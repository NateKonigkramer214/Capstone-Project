@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<h3 class="text-2xl font-bold mb-4 text-gray-100">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" class="mb-4 text-gray-100" />
<div class="flex justify-center items-center min-h-screen bg-gray-900">
    <div class="col-md-6">
        <form id="change-password-form" method="post" class="bg-white shadow-md rounded-md p-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
            <div class="form-floating mb-3 input-group">
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <input asp-for="Input.OldPassword" class="form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <span asp-validation-for="Input.OldPassword" class="text-red-600"></span>
            </div>
            <div class="form-floating mb-3 input-group">
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <input asp-for="Input.NewPassword" class="form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <span asp-validation-for="Input.NewPassword" class="text-red-600"></span>
            </div>
            <div class="form-floating mb-3 input-group">
                <label asp-for="Input.ConfirmPassword" class="form-label\"></label>
                <input asp-for="Input.ConfirmPassword" class="form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600"></span>
            </div>
            <button type="submit" class="w-full px-4 py-2 text-lg font-medium text-white bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
