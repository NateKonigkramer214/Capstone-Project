@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<h3 class="text-2xl font-bold mb-4 text-gray-100">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="flex justify-center items-center min-h-screen bg-gray-900">
    <div>
        <form id="profile-form" method="post" class="bg-white shadow-md rounded-md p-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4" role="alert"></div>
            <div class="mb-4">
                <label asp-for="Username" class="block text-gray-300 text-sm font-bold mb-2"></label>
                <input asp-for="Username" class="form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" placeholder="Please choose your username." disabled />
            </div>
            <div class="mb-4">
                <label asp-for="Input.PhoneNumber" class="block text-gray-300 text-sm font-bold mb-2"></label>
                <input asp-for="Input.PhoneNumber" class="form-input w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:border-blue-500" placeholder="Please enter your phone number." />
                <span asp-validation-for="Input.PhoneNumber" class="text-red-600"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-full px-4 py-2 text-lg font-medium text-white bg-blue-500 rounded-md hover:bg-blue-400 focus:outline-none focus:bg-blue-400">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
